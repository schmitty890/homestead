<section class="block">
<div class="container">
  <h2>Upcoming Events</h2>
  <div class="upcoming-events items grid grid-xl-3-items grid-lg-3-items grid-md-2-items">
    <!-- item -->
    {{#each hbsObject.eventInfo}}
    <div class="item">
      <div class="wrapper">
        <div class="image">
          <h3>
            <a class="tag category">{{this.category}}</a>
            <a class="title">{{this.title}}</a>
          </h3>
          <a class="image-wrapper background-image">
            <img src="{{imagePath this.category}}" alt="">
          </a>
        </div>
        <!--end image-->
        <div class="meta">
          <figure>
            <i class="fa fa-calendar-o"></i>{{momentFromNowTime this.date}}
          </figure>
          <figure>
            <a>
              <i class="fa fa-user"></i>Posted By: {{this.author_id}}
            </a>
          </figure>
        </div>
        <!--end meta-->
        <div class="description">
          <p>{{this.description}}</p>
        </div>
        <!--end description-->
        <a href="./events" class="detail text-caps underline">See More!</a>
      </div>
    </div>
    {{/each}}
    <!-- end item -->
  </div>
</div>
<div class="background" data-background-color="#fff"></div>
<!--end background-->
</section>
